<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<groupId>com.george.app</groupId>
	<artifactId>jira-maven-plugin</artifactId>
	<packaging>maven-plugin</packaging>
	<name>Maven JIRA Plugin</name>
	<version>1.3-SNAPSHOT</version>
	<description>This project contains MOJOs to ease integration with JIRA</description>

    <properties>
        <maven.plugin.testing.harness.version>3.2.0</maven.plugin.testing.harness.version>
        <maven.compiler.plugin.version>3.1</maven.compiler.plugin.version>
		<maven.version>3.2.3</maven.version>
        <jira.rest.java.client.version>2.0.0-m2</jira.rest.java.client.version>
        <easymock.version>3.2</easymock.version>
        <junit.version>4.11</junit.version>
	</properties>

    <repositories>
		<repository>
			<id>atlassian-public</id>
			<url>https://m2proxy.atlassian.com/repository/public</url>
			<snapshots>
				<enabled>true</enabled>
				<updatePolicy>daily</updatePolicy>
				<checksumPolicy>warn</checksumPolicy>
			</snapshots>
			<releases>
				<enabled>true</enabled>
				<checksumPolicy>warn</checksumPolicy>
			</releases>
		</repository>
	</repositories>

    <pluginRepositories>
		<pluginRepository>
			<id>atlassian-public</id>
			<url>https://m2proxy.atlassian.com/repository/public</url>
			<releases>
				<enabled>true</enabled>
				<checksumPolicy>warn</checksumPolicy>
			</releases>
			<snapshots>
				<checksumPolicy>warn</checksumPolicy>
			</snapshots>
		</pluginRepository>
	</pluginRepositories>

    <prerequisites>
		<maven>3.0</maven>
	</prerequisites>

    <developers>
		<developer>
			<id>gastaldi</id>
			<name>George Gastaldi</name>
			<email>gastaldi@apache.org</email>
